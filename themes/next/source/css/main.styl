// CSS Style Guide: http://codeguide.co/#css


$scheme    = hexo-config('scheme') ? hexo-config('scheme') : 'Muse';

$variables = base $scheme;


// Variables Layer
// --------------------------------------------------
for $variable in $variables
  @import "_variables/" + $variable;
for $inject_variable in hexo-config('injects.variable')
  @import $inject_variable;

// Mixins Layer
// --------------------------------------------------
@import "_mixins.styl";
for $inject_mixin in hexo-config('injects.mixin')
  @import $inject_mixin;

// Dark mode colors
// --------------------------------------------------
@import "_colors.styl";

// Common Layer
// --------------------------------------------------

// Scaffolding
@import "_common/scaffolding";

// Layout
@import "_common/outline";

// Components
@import "_common/components";


// Schemes Layer
// --------------------------------------------------
@import "_schemes/" + $scheme;


// Custom Layer
// --------------------------------------------------
for $inject_style in hexo-config('injects.style')
  @import $inject_style;

@import './darkmode.styl';
body > .container  {
    min-height: 100%;
    position: relative;
    background-color: initial;
    color: var(--darkreader-text--text-color);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    --darkreader-inline-bgcolor: initial;
    --darkreader-inline-color: var(--darkreader-text--darkreader-text--text-color);
    background-image: linear-gradient(0deg, rgb(227, 253, 245), rgb(255, 230, 250));
    --darkreader-inline-bgimage: linear-gradient(-255deg, #054033, #420035);
}